{% extends "base.html.twig" %}

{% block body %}
    <form method="post">

        {% include "layout/flash_message.html.twig" %}

        <h1 class="h3 mb-3 font-weight-normal">Create Payment</h1>
        <hr />
        <label for="participant">Participant</label>
        <select class="form-control" name="participant" id="participant">
            {% for participant in participantList %}
                <option value="{{ participant.id }}">{{ participant.user.email }}</option>
            {% endfor %}
        </select>
        <label for="descriptionInput">Description</label>
        <input type="text" class="form-control" name="description" id="descriptionInput" />
        <label for="amountInput">Amount</label>
        <input type="number" class="form-control" name="amount" id="amountInput" min="0" value="0" step="0.01" />
        <label for="datePaidInput">Amount</label>
        <input type="date" class="form-control" name="datePaid" id="datePaidInput" />
        <button class="btn btn-lg btn-primary" type="submit">
            Create Payment
        </button>
    </form>
{% endblock %}